%html(ng-app="realty")
  / <![endif]
  %head
    %meta{:charset => "utf-8"}/
    / Uncomment to make IE8 render like IE7
    / <meta http-equiv="X-UA-Compatible" content="IE=7" />
    / Set the viewport width to device width for mobile
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title= content_for?(:title) ? yield(:title) : "Untitled"
    = stylesheet_link_tag    "application", :media => 'all'
    = javascript_include_tag "vendor/custom.modernizr"
    = csrf_meta_tags
  %body#page.off-canvas.hide-extras
    .container
      = render 'layouts/top_bar'
      / Main Page Content and Sidebar
      %p.small-block
        %a#sidebarButton.sidebar-button.dorohouse_button{:href => "#sidebar"} Search
      .row
        %section#sidebar{:role => "complementary"}
          %nav#sideMenu{:role => "navigation"}
            #sideMainNav.nav-bar
              = render 'layouts/sidebar'
        .large-3.columns.hide-for-small.hide-for-medium= render 'layouts/sidebar'
        .large-3.columns.show-for-medium= render 'layouts/sidebar_medium'
        .large-9.columns
          = yield
      / End Main Content and Sidebar
      = render 'layouts/footer'
    = javascript_include_tag "http://maps.googleapis.com/maps/api/js?sensor=false&language=ru"
    = javascript_include_tag "application"

