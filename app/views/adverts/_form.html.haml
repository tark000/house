= form_for(@advert) do |f|

  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :operation_type_id
    %br/
    = f.collection_select :operation_type_id, OperationType.order(:title), :id, :title, include_blank: true
  .field
    = f.label :category_id
    %br/
    = f.collection_select :category_id, Category.order(:title), :id, :title, include_blank: true
  .field
    = f.label :living
    %br/
    = f.check_box :living
  .field
    = f.label :price
    %br/
    = f.text_field :price
  .field
    = f.label :area
    %br/
    = f.text_field :area
    %br/
    = f.text_field :all_price
  .field
    = f.label :estate_type_id
    %br/
    = f.collection_select :estate_type_id, EstateType.order(:title), :id, :title, include_blank: true
  .field

  .field
    = f.label :city_id
    %br/
    = f.collection_select :city_id, City.order(:title), :id, :title,  include_blank: true
  .field
    = f.label :district_id
    %br/
    = f.grouped_collection_select :district_id, City.order(:title), :districts, :title, :id, :title, include_blank: true
  .field
    = f.label :street_id
    %br/
    = f.grouped_collection_select :street_id, City.order(:title), :streets, :title, :id, :title, include_blank: true
  .field
    = f.label :house
    %br/
    = f.text_field :house
  .field
    = f.label :room_number
    %br/
    = f.number_field :room_number
  .field
    = f.label :floor
    %br/
    = f.text_field :floor
  .field
    = f.label :state
    %br/
    = f.check_box :state
  .field
    = f.label :image
    %br/
    = f.file_field :image


  .field
    - f.fields_for :advert_images do |builder|
      = render 'advert_image_fields', f: builder
    = link_to_add_fields "Add advert_image", f, :advert_images
  .field
    = f.label :layout
    %br/
    = f.file_field :layout
  .field
    - f.fields_for :layout do |builder|
      = render 'layout_fields', f: builder
    = link_to_add_fields "Add Layout", f, :layouts
  .field
    = f.label :video
    %br/
    = f.text_field :video
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .actions
    = f.submit
